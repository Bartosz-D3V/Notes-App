{
  "name": "notes-app",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "pretest": "npm run lint",
    "test": "ng test --code-coverage",
    "lint": "ng lint && npm run stylelint",
    "e2e": "ng e2e",
    "dist": "ng build --prod --aot=false --no-sourcemap --base-href=/Notes-App/",
    "stylelint": "node node_modules/stylelint/bin/stylelint.js --config ./.stylelintrc.json --syntax scss --color ./src/**/*.scss",
    "coverage": "codecov -f .codecov.yml --disable=gcov",
    "precommit": "npm test",
    "commitmsg": "commitplease .git/COMMIT_EDITMSG",
    "clean": "rm -rf ./dist",
    "build": "ng build",
    "prebuild": "npm test",
    "deploy": "npm test && npm run dist && angular-cli-ghpages && npm run clean"
  },
  "commitplease": {
    "nohook": true,
    "style": "angular",
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert"
    ],
    "scope": "\\S+.*"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^4.3.1",
    "@angular/cdk": "^2.0.0-beta.8",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/material": "^2.0.0-beta.8",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@types/chai-spies": "^0.0.0",
    "@types/hammerjs": "^2.0.34",
    "angular-cli-ghpages": "^0.5.1",
    "angular-in-memory-web-api": "^0.3.2",
    "chai-spies": "^0.7.1",
    "core-js": "^2.4.1",
    "hammerjs": "^2.0.8",
    "karma-chai-spies": "^0.1.4",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.17"
  },
  "devDependencies": {
    "@angular/cli": "1.0.4",
    "@angular/compiler-cli": "^4.0.0",
    "@types/chai": "^4.0.1",
    "@types/expect": "^1.20.1",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "chai": "^4.0.2",
    "codecov": "^2.2.0",
    "codelyzer": "^2.0.0",
    "commitplease": "^2.7.10",
    "husky": "^0.14.3",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "^3.2.0",
    "karma": "^1.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.0",
    "stylelint": "^7.13.0",
    "stylelint-config-standard": "^16.0.0",
    "ts-node": "~2.0.0",
    "tslint": "^4.5.0",
    "typescript": "~2.2.0"
  }
}
